# Включение движка перезаписи
RewriteEngine On

# Базовый путь (измените при необходимости)
RewriteBase /fisherp/

# Защита конфигурационных файлов
<FilesMatch "^(config|includes|database)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Защита .htaccess
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# Установка кодировки по умолчанию
AddDefaultCharset UTF-8

# Защита от просмотра директорий
Options -Indexes

# Настройки PHP (если разрешено)
<IfModule mod_php7.c>
    php_value session.cookie_httponly 1
    php_value session.use_only_cookies 1
</IfModule>
